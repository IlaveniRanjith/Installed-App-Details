<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="7dp"
        tools:context=".AppDetails">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/app_details_welcome"
            android:id="@+id/tv_appname_welcome"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            android:padding="2dp"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:padding="1dp"
                    android:text="@string/certificate_details"
                    android:textSize="15sp"
                    android:textColor="#FA0505" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />

                <!-- Linear Layout for App Label-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:padding="1dp"
                        android:text="@string/app_label"
                        android:textColor="#29F" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_appName"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="App Name"
                        android:padding="1dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />

                <!-- Linear Layout for App Package Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:padding="1dp"
                        android:text="Package:"
                        android:textColor="#29F" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_pkgName"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Package Name"
                        android:padding="1dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />

                <!-- Linear Layout for App Sha-256 value-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:padding="1dp"
                        android:text="@string/signature"
                        android:textColor="#29F" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_certfingerprint"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Sha-256 value"
                        android:padding="1dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />

                <!-- Linear Layout for App cert subject value-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:padding="1dp"
                        android:text="@string/subject"
                        android:textColor="#29F" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_certdetails"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Cert subject"
                        android:padding="1dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />

                <!-- Linear Layout for App cert Issuer value-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:padding="1dp"
                        android:text="@string/issuer"
                        android:textColor="#29F" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_certissuer"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Cert issuer"
                        android:padding="1dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />

                <!-- Linear Layout for App cert Algorithm value-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:padding="1dp"
                        android:text="Algorithm:"
                        android:textColor="#29F" />

                    <TextView
                        android:id="@+id/tv_algo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="@string/sha256withrsa"
                        android:padding="1dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#D5D0D0"
                    android:textIsSelectable="true" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

